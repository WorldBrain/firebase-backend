{
  "rules": {
    "signalling": {
      "$id": {
        ".read": true,
        ".write": true,
        ".validate": "newData.child('payload').isString() && newData.child('deviceId').isString() && newData.child('type').val().matches(/^initial|message|confirmation$/) && newData.child('confirm').isBoolean() && newData.child('updated').val() === now",
        ".indexOn": [
          "updated"
        ]
      }
    }
  }
}
